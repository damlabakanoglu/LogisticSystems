@model TerminalApp.Models.Entities.Pozition

@{
    ViewBag.Title = "Clothes";
}

<br />
<br />

<div>
    @using (Html.BeginForm("PickByQuadrantPozition", "Toplama", FormMethod.Post))
    {
        <table>
            <tr>
                <td><p>Pozisyon Giriniz</p></td>
                <td><p>@ViewBag.Pozition</p></td>
                <td>@Html.TextBoxFor(x => x.PozitionName)</td>
                <td><p class="text-danger">@ViewBag.Error</p></td>
                
            </tr>
            <tr>
                <td>
                    <input type="submit" value="Giriş" class="btn btn-primary" id="btnSubmit" />
                </td>
            </tr>

        </table>
    }
</div>

